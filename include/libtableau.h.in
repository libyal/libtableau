/* Returns the library version
 */
#if defined( LIBTABLEAU_WIDE_CHARACTER_TYPE )
LIBTABLEAU_EXTERN const wchar_t *libtableau_get_version(
                                  void );
#else
LIBTABLEAU_EXTERN const char *libtableau_get_version(
                               void );
#endif

/* Set the notify values
 */
LIBTABLEAU_EXTERN void libtableau_set_notify_values(
                        FILE *stream,
                        uint8_t verbose );

/* Initializes the handle
 * Make sure the value handle is pointing to is set to NULL
 * Returns 1 if successful or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_handle_initialize(
                       libtableau_handle_t **handle );

/* Frees an exisisting handle
 * Returns 1 if successful or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_handle_free(
                       libtableau_handle_t **handle );

/* Opens a device
 * Returns 1 if successful or -1 on error
 */
#if defined( LIBTABLEAU_WIDE_CHARACTER_FILE_FUNCTIONS )
LIBTABLEAU_EXTERN int libtableau_open(
                       libtableau_handle_t *handle,
                       const wchar_t *filename );
#else
LIBTABLEAU_EXTERN int libtableau_open(
                       libtableau_handle_t *handle,
                       const char *filename );
#endif

/* Closes a device
 * Returns 0 if successful or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_close(
                       libtableau_handle_t *handle );

/* Queries the opened device for Tableau information
 * Returns 1 if successful or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_query(
                       libtableau_handle_t *handle );

/* Detects the DCO from the opened device
 * The device must be already queried
 * Returns 1 if a DCO is present, 0 if no DCO is present or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_detected_dco(
                       libtableau_handle_t *handle );

/* Removes the DCO from the opened device
 * The device must be already queried
 * Returns 1 if successful, 0 if no DCO is present or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_remove_dco(
                       libtableau_handle_t *handle );

/* Retrieves the amount of drive sectors
 * Returns 1 if successful, 0 if no amount of drive sectors value is present or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_get_drive_amount_of_sectors(
                       libtableau_handle_t *handle,
                       uint32_t *amount_of_sectors );

/* Retrieves the amount of HPA sectors
 * Returns 1 if successful, 0 if no amount of HPA sectors value is present or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_get_hpa_amount_of_sectors(
                       libtableau_handle_t *handle,
                       uint32_t *amount_of_sectors );

/* Retrieves the amount of DCO sectors
 * Returns 1 if successful, 0 if no amount of DCO sectors value is present or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_get_dco_amount_of_sectors(
                       libtableau_handle_t *handle,
                       uint32_t *amount_of_sectors );

/* Retrieves the amount of tableau values
 * Returns 1 if successful, 0 if no tableau values are present or -1 on error
 */
LIBTABLEAU_EXTERN int libtableau_get_amount_of_tableau_values(
                       libtableau_handle_t *handle,
                       uint32_t *amount_of_values );

/* Retrieves the tableau value identifier specified by its index
 * Returns 1 if successful, 0 if value not present or -1 on error
 */
#if defined( LIBTABLEAU_WIDE_CHARACTER_TYPE )
LIBTABLEAU_EXTERN int libtableau_get_tableau_value_identifier(
                       libtableau_handle_t *handle,
                       uint32_t index,
                       wchar_t *value,
                       size_t length );
#else
LIBTABLEAU_EXTERN int libtableau_get_tableau_value_identifier(
                       libtableau_handle_t *handle,
                       uint32_t index,
                       char *value,
                       size_t length );
#endif

/* Retrieves the tableau value specified by the identifier
 * Returns 1 if successful, 0 if value not present or -1 on error
 */
